# Environment Variables for Counselor Application
# Copy this file to .env and fill in your actual values

# Firebase Configuration (Production Setup)
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Flask Configuration
FLASK_SECRET_KEY=your_super_secret_key_here
FLASK_DEBUG=False
FLASK_ENV=production

# Application Settings
MAX_STUDENTS_CONSOLIDATE=40
MAX_STUDENTS_PASS_PERCENTAGE=100

# Development Settings (set to True for local development)
USE_LOCAL_FIREBASE_FILE=True
